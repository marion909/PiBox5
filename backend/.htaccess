# PiBox5 Backend - Apache Configuration
# URL-Rewriting, Security Headers, PHP Settings

# Enable Rewrite Engine
RewriteEngine On

# Redirect root to gallery
RewriteRule ^$ gallery.php [L]

# Protect config file
<Files "config.php">
    Order Allow,Deny
    Deny from all
</Files>

# Security Headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# PHP Settings for File Uploads
<IfModule mod_php.c>
    php_value upload_max_filesize 15M
    php_value post_max_size 16M
    php_value max_execution_time 60
    php_value memory_limit 128M
</IfModule>

# Compress Text Files
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css application/javascript application/json
</IfModule>

# Cache Static Assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
</IfModule>

# Disable Directory Listing
Options -Indexes

# Error Pages (optional)
# ErrorDocument 404 /gallery.php
# ErrorDocument 403 /gallery.php
